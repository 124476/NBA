<Window x:Class="NBA.Windows.OknoEventOrTech"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBA.Windows"
        mc:Ignorable="d"
        Title="Testing only!" Height="250" Width="400" MinHeight="250" MinWidth="400">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="FOR TESTING ONLY!" FontSize="27" Foreground="Orange" TextAlignment="Center"></TextBlock>
            <TextBlock Text="Which type of user would you like to log in to the system as?" FontSize="17" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
            <Button x:Name="Eventbtn" Content="Event Administrator" Click="Eventbtn_Click" FontSize="17" Margin="0,10,0,10" Background="White"></Button>
            <Button x:Name="TechBtn" Content="Technical Administrator" Click="TechBtn_Click"  FontSize="17" Background="White"></Button>
        </StackPanel>
    </Grid>
</Window>
